<Window x:Class="CS_BS.NewGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start a New Game" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="147" Width="320">
    <Grid>
        <Label Content="Select Difficulty Level :" Height="28" HorizontalAlignment="Left" Margin="0,28,0,0" Name="label1" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="138,28,0,0" Name="GameDifficulty" VerticalAlignment="Top" Width="120" SelectedIndex="0" />
        <Button Content="Start New Game" Height="23" HorizontalAlignment="Left" Margin="89,73,0,0" Name="SNGBtn" VerticalAlignment="Top" Width="95" Click="StartNewGame" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="211,73,0,0" Name="CancelBtn" VerticalAlignment="Top" Width="75" Click="Cancel" />
    </Grid>
</Window>
